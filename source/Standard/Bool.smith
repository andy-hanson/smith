use Fun
use Opt


∙ B
	`global.Boolean`.to-type 'Bool

B.do
	‣‣ Yes
		`true`

	‣‣ No
		`false`

	‣ ? then:Fun else:Fun
		`this.valueOf() ? then() : _else()`

	‣ ∨ a:Fun
		`this || a()`

	‣ ∧ a:Fun
		`this && a()`

	‣ ¬
		`!this`

	‣ → a:Fun
		`!this || a()`

	‣ ⊕ a:Bool
		`this ? !a : a`

	‣ nor a:Bool
		`!(this || a)`

	‣ if then:Fun
		?
			Opt.None
		|
			Opt.Some then.of

	#alias '? 'if-then-else
	#alias '∨ 'or
	#alias '∧ 'and
	#alias '¬ 'not
	#alias '→ 'implies
	#alias '⊕ 'xor


export B
